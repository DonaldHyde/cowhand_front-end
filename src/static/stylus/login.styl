.login-view
  width 600px
  margin 80px auto 0
  text-align center

.title-container
  h1
    font-family: 'Holtwood One SC'
    font-size 36px
    margin-top 20px
  
  p
    font-size 18px

.form-container
  .input-element
    max-width 450px
    text-align left
    margin 0 auto

    label
      font-size 18px
      margin-top 44px
      display block

    input
      display block
      width 100%
      height 68px
      border-radius 10px
      border 0
      background-color #E2DEDB
      margin-top 14px  
      font-size 24px
      padding 0 20px

  button
    width 290px
    height 75px
    background-color #6CD1E5
    font-family 'Holtwood One SC'
    font-size 36px
    border-radius 10px
    margin-top 44px
    color white
    border 0