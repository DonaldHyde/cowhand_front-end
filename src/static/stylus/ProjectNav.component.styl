.projects
  &__select
    position relative
    color #FAF8F7

  &__button
    font-size 18px
    background none
    border none
    color #FAF8F7
    font-weight 300
    padding 6px 13px

    &:hover
      background-color #656172
      border-radius 10px

    &:after
      content ''
      width 0px
      height 0px
      border-top 8px solid #faf8f7
      border-left 8px solid transparent
      border-right 8px solid transparent
      position relative
      top 15px
      left 10px
      margin-right 10px

  &__nav
    position absolute
    z-index 1
    background #231e35
    padding 0 25px
    top 41px
    left -25px
    min-width 260px

    &--hidden
      display none

  &__list
    list-style none
    margin 0
    padding 0

  &__item
    margin 10px 0

  &__link
    color #FAF8F7
    text-decoration none